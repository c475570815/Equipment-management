@{
    ViewBag.Title = "指派维修人员";
    Layout = null;
}
<!DOCTYPE html>
<head>
    <meta charset="utf-8" />
    <title>维修审批</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-table-min.js"></script>
    <script src="~/Scripts/bootstrap-table-zh-CN.min.js"></script>
    <link href="~/Scripts/bootstrap-table.min.css" rel="stylesheet" />
    <script src="~/Scripts/MaintenanceAppoint_form.js"></script>
</head>
<body style="padding:10px">
    <table id="table">
        <thead>
            <tr>
                <th>设备类型</th>
                <th>设备所在地</th>
                <th>故障描述</th>
                <th>申请人</th>
                <th>申请人电话</th>
                <th>申请时间</th>
            </tr>
        </thead>
    </table>


    <div class="modal fade" id="AppointModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <script src="~/Scripts/MaintenanceAppoint_form.js"></script>
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <center><h4 class="modal-title" id="myModalLabel">人员派遣</h4></center>
                </div>
                <div class="modal-body">
                    <table id="table_appoint">
                        <thead>
                            <tr>
                                <th>人员编号</th>
                                <th>姓名</th>
                                <th>电话</th>
                                <th>正在维修设备数</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <div class="modal-footer">
                    <center> <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button></center>
                </div>
            </div>
        </div>
    </div>



    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">提示</h4>
                </div>
                <div class="modal-body">
                    <center id="Message"> ...</center>
                </div>
                <div class="modal-footer">
                    <center> <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button></center>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

