@{
    ViewBag.Title = "维修申请";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>维修审批</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body style="padding: 10px;">
    <div class ="col-md-12 column">
        <div style="margin:auto">
            <h1 style="text-align:center">维修申请</h1>
            <div>
                <div id="adderror" class="alert  alert-warning " role="alert">
                    <span>警告：</span><a href="#" class="alert-link">123456</a>
                </div>
                <div id="addsuccess" class="alert  alert-success" role="alert">
                    <span>恭喜：</span><a href="#" class="alert-link">1234566</a>
                </div>
            </div>
            <form role="form">
                <div class="form-group">
                    <label for="name">设备编号</label>
                    <input type="text" class="form-control" id="di_EqId" placeholder="请输入设备编号....">
                </div>
                <div class="form-group">
                    <label for="name">申请原因</label>
                    <textarea class="form-control" rows="4" id="a_Resion"></textarea>
                </div>
                <div class="btn-group-lg" style="float:right">
                    <input type="button" class="btn  btn-primary" value="提交" id="btnSubmit" />
                    <input type="button" class="btn  btn-default" id="clean" value="清空" onclick="reset()" />
                </div>
                @*<div class="row clearfix"></div>*@
            </form>
        </div>
    </div>
        @*<div class="clearfix"></div>*@
    <script src="~/Scripts/Apply.js"></script>
  </body>
</html>

