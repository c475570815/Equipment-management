
@{
    ViewBag.Title = "维修审批";
    Layout =null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>维修审批</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/bootstrap-table-min.js"></script>
    <script src="~/Scripts/bootstrap-table-zh-CN.min.js"></script>
    <link href="~/Scripts/bootstrap-table.min.css" rel="stylesheet" />
    <script src="~/Scripts/Maintenance_form.js"></script>
</head>
<body style="padding:10px">
    <div class="col-sm-4" style="text-align:left; width:10%;">
        <button type="button" style="margin-left:50px" id="btn_pass" class="btn btn-primary" onclick="pass()">一键通过</button>
    </div>
    <div style="width: 80%;">
        <table id="table">
            <thead>
                <tr style="width:80%">
                    <th>设备编号</th>
                    <th>报修时间</th>
                    <th>故障</th>
                </tr>
            </thead>
        </table>
    </div>
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">提示</h4>
                </div>
                <div class="modal-body">
                    <center id="Message"> ...</center>
                </div>
                <div class="modal-footer">
                    <center> <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button></center>
                </div>
            </div>
        </div>
    </div>
</body>

