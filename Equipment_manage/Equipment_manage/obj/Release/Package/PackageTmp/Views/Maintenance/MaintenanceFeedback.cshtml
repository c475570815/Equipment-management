@{
    ViewBag.Title = "维修反馈";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <h2>维修反馈</h2>
    <div class="container">
        <div class="row clearfix">
            <div class="col-md-6 column">
                <form role="form">
                    @*<div class="form-group">
                        <label for="maintainCause">维修原因</label>
                        <textarea class="form-control" rows="4" id="maintainCause"></textarea>
                    </div>*@
                    <div class="form-group">
                        <label for="maintainAdvice">维修建议</label>
                        <textarea class="form-control" rows="4" id="maintainAdvice"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="rd_EndTime">结束时间</label>
                        @*<textarea class="form-control" rows="4" id="rd_EndTime"></textarea>*@
                        <input type="datetime" class="form-control" id="rd_EndTime">
                    </div>
                </form>
                <div class="row clearfix">
                    <div class="col-md-2 column">
                        <button type="button" class="btn btn-default btn-success">提交</button>
                    </div>
                    <div class="col-md-2 column">
                        <button type="button" class="btn btn-default">重置</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="myModalLabel">提示</h4>
                </div>
                <div class="modal-body">
                    <center id="Message"> ...</center>
                </div>
                <div class="modal-footer">
                    <center> <button type="button" class="btn btn-primary" data-dismiss="modal">关闭</button></center>
                </div>
            </div>
        </div>
    </div>

</body>
</html>


